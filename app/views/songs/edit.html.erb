<%= render "layouts/navbar" %>

<h1>Edit Song</h1>

<%= form_tag("/artists/#{@artist.id}/songs/#{@song.id}", method: :put, model: @song, local: true, class: "") do %>

    <div class="field">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, placeholder: "name", autofocus: true, required: true %>
    </div>

    <div class="field">
        <%= label_tag :length %>
        <%= text_field_tag :length, nil, placeholder: "length", required: true %>
    </div>

    <%= submit_tag nil, class: "button" %>

<% end %>