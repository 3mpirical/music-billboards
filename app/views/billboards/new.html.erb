<%= render "layouts/navbar" %>

<h1>What Is Your Billboard?</h1>

<%= form_tag("/billboards", model: @song, local: true, class: "") do %>

    <div>
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, placeholder: "name", autofocus: true, required: true %>
    </div>

    <div>
        <p>Songs: </p>
        <ul>
            <% @songs.each_with_index() do |song, index| %>
                <li>
                    <%= check_box_tag "song_id[]", "#{song.id}" %> 
                    <%= label_tag "song_id[]", "#{song.name} by: #{song.artist.name}" %>
                </li>
            <% end %>
        </ul>
    </div>

    <%= submit_tag nil, class: "button" %>

<% end %>