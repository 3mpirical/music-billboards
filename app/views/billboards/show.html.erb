<%= render "layouts/navbar" %>

<h1> <%= @billboard.name %> </h1>

<%= link_to "Back To Billboards", billboards_path, class: "button" %>
<%= link_to "Edit", edit_billboard_path(@billboard.id), class: "button" %>
<%= link_to "Delete", billboard_path(@billboard.id), method: :delete, class: "button" %>

<hr>

<ul>
    <% @billboard.songs.each() do |song| %>

        <li> <%= song.name %>  <%= link_to "info", "/songs/#{song.id}" %> </li>

    <% end %>
</ul>



