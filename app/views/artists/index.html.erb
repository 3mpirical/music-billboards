<%= render "layouts/navbar" %>

<h1>Artists On Record</h1>
<%= link_to "Sign Up An Artist Today", new_artist_path %>
<hr>

<% @artists.each() do |artist| %>
    <img src="<%= artist.avatar %>" alt="artist picture">
    <h3><%= artist.name %></h3>
    <%= link_to "see more", artist_path(artist.id) %>
    <hr>

<% end %>